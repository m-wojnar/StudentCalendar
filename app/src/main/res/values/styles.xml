<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/primary_light_color</item>
        <item name="fontFamily">@font/montserrat_alternates</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@drawable/action_bar_light</item>
    </style>

    <style name="WelcomeText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/welcome_text</item>
    </style>

    <style name="TitleText">
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_text</item>
    </style>

</resources>