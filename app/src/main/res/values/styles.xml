<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="fontFamily">@font/advent_pro_medium</item>
    </style>

    <style name="WelcomeText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/welcome_text</item>
        <item name="fontFamily">@font/lobster_two_italic</item>
    </style>

    <style name="TitleText" parent="WelcomeText">
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <style name="TabItem" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/advent_pro_medium</item>
        <item name="android:textSize">@dimen/tab_item_text</item>
    </style>

</resources>