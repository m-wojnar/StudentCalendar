<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:context=".about.AboutFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/action_margin"
            android:background="@drawable/action_bar_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/action_margin"
            android:weightSum="1">

            <Button
                android:id="@+id/navigation_back_button"
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:background="@drawable/ic_baseline_arrow_back_40"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates"
                android:textAlignment="center"
                tools:text="@string/about" />

            <View
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="0dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_big"
            android:src="@mipmap/ic_launcher" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_standard"
            android:text="@string/app_name"
            android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_big"
            android:text="@string/about_text"
            android:textAlignment="center" />
    </LinearLayout>
</layout>