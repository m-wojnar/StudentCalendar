<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".setting.SettingsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/action_margin"
            android:background="@drawable/action_bar_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/action_margin"
            android:weightSum="1">

            <Button
                android:id="@+id/navigation_back_button"
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="@dimen/action_icon_size"
                android:background="@drawable/ic_baseline_arrow_back_40"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                style="@style/TitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates"
                android:text="@string/settings"
                android:textAlignment="center" />

            <View
                android:layout_width="@dimen/action_icon_size"
                android:layout_height="0dp" />
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>